{
  "name": "autopilot-multi-pod-trader",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint . --ext .ts",
    "test": "vitest run",
    "dry-run": "TRADING_MODE=DRY_RUN tsx src/index.ts",
    "paper": "TRADING_MODE=PAPER tsx src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "tsx src/index.ts",
    "reset-modes": "tsx src/cli/resetModes.ts",
    "dashboard:dev": "npm --workspace apps/dashboard run dev",
    "dashboard:build": "npm --workspace apps/dashboard run build",
    "dashboard:preview": "npm --workspace apps/dashboard run preview"
  },
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "fastify": "^5.6.2",
    "yaml": "^2.5.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.1.0",
    "@typescript-eslint/parser": "^8.1.0",
    "eslint": "^9.8.0",
    "eslint-plugin-boundaries": "^4.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.2",
    "vitest": "^2.1.1"
  }
}
