{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ai/*": ["src/ai/*"],
      "@exchange/*": ["src/exchange/*"],
      "@execution/*": ["src/execution/*"],
      "@risk/*": ["src/risk/*"],
      "@events/*": ["src/events/*"],
      "@fsm/*": ["src/fsm/*"],
      "@state/*": ["src/state/*"],
      "@pods/*": ["src/pods/*"],
      "@loops/*": ["src/loops/*"],
      "@health/*": ["src/health/*"],
      "@strategies/*": ["src/strategies/*"],
      "@consensus/*": ["src/consensus/*"],
      "@reports/*": ["src/reports/*"],
      "@utils/*": ["src/utils/*"],
      "@config/*": ["src/config/*"]
    }
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "dist"]
}
